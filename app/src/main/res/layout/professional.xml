<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ADE2FF"
    tools:context="com.example.goofygoober.ta.professional">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Search for Professionals"
        android:textColor="#121212"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type         :"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#121212"
            />

        <Spinner
            android:id="@+id/isiTypeProf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#121212"
            android:layout_toRightOf="@id/textType"
            />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location  :"
            android:textSize="20dp"
            android:layout_marginTop="45dp"
            android:textColor="#121212"
            android:layout_below="@id/textType"
            />

        <Spinner
            android:id="@+id/isiLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#121212"
            android:layout_below="@id/isiTypeProf"
            android:layout_toRightOf="@id/textLocation"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Result"
        android:textColor="#121212"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="2dp"
        android:background="#ffffff">

    </ListView>


</LinearLayout>
